<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:textSize="18sp"
        android:textColorHint="@color/colorItemGrayBlue"
        android:id="@+id/et_username"
        android:hint="@string/input_key"
        android:background="@color/colorBTV"
        android:layout_width="350dp"
        android:layout_height="50dp" />

    <EditText
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorItemGrayBlue"
        android:id="@+id/et_password"
        android:hint="@string/input_password"
        android:background="@color/colorBTV"
        android:layout_width="350dp"
        android:layout_height="50dp" />

    <Button
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:id="@+id/bt_login"
        android:textSize="22sp"
        android:text="@string/login"
        android:background="@drawable/item_message_bg"
        android:layout_width="350dp"
        android:layout_height="50dp" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bt_create_account"
        android:text="@string/create_account"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@drawable/text_color_create_account"
        android:background="@color/colorTranslucent"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:visibility="gone"
        style="@style/progress_blue"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar" />

</LinearLayout>
