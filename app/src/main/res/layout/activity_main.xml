<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="20dp"
        android:text="13:00"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="32dp" />

    <ImageView
        android:id="@+id/iv_net"
        android:layout_marginLeft="10dp"
        android:src="@drawable/wifi0"
        android:layout_toRightOf="@id/tv_time"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/tv_rental"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_net"
        tools:text="B1"
        android:textColor="@color/colorGray2"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_left_time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_rental"
        tools:text="12D-11H-10M"
        android:textColor="@color/colorGray2"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="32dp"/>

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="11-08-2016"
        android:layout_alignParentRight="true"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="32dp" />

    <ImageView
        android:scaleType="centerInside"
        android:background="@drawable/icon_bg"
        android:layout_toLeftOf="@id/tv_date"
        android:id="@+id/iv_weather"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:layout_marginRight="5dp"
        android:id="@+id/tv_temperature"
        android:gravity="center"
        android:layout_toLeftOf="@id/iv_weather"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_welcome"
        tools:text="Hello family"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_toRightOf="@id/iv_net"
        android:layout_toLeftOf="@id/iv_weather"
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_time"
        android:textSize="14sp"
        android:textColor="@color/colorGray2"
        tools:text="@string/ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.wiatec.btv_launcher.custom_view.RollTextView
            android:id="@+id/tv_message"
            android:drawableLeft="@drawable/message1_sp_icon"
            android:textSize="26sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:visibility="gone"
            android:autoLink="all"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <FrameLayout
        android:layout_marginTop="10dp"
        android:clipChildren="false"
        android:id="@+id/frame_layout"
        android:layout_above="@id/rl_message"
        android:layout_below="@id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>
</layout>