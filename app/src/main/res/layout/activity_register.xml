<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <LinearLayout android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:textSize="22sp"
            android:textColorHint="@color/colorItemGrayBlue"
            android:id="@+id/et_username"
            android:hint="@string/input_key"
            android:background="@color/colorBTV"
            android:textColor="@color/colorWhite"
            android:layout_width="350dp"
            android:layout_height="50dp" />

        <EditText
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorItemGrayBlue"
            android:id="@+id/et_email"
            android:hint="@string/email"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBTV"
            android:layout_width="350dp"
            android:layout_height="50dp" />

        <EditText
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorItemGrayBlue"
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:hint="@string/input_password"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBTV"
            android:layout_width="350dp"
            android:layout_height="50dp" />

        <EditText
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorItemGrayBlue"
            android:id="@+id/et_password1"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:hint="@string/input_password"
            android:background="@color/colorBTV"
            android:layout_width="350dp"
            android:layout_height="50dp" />

        <Button
            android:onClick="{(view) -> onEvent.onClick(view)}"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_register"
            android:textSize="22sp"
            android:text="@string/register"
            android:textColor="@drawable/bg_text_login"
            android:background="@drawable/bg_btn_login"
            android:layout_width="350dp"
            android:layout_height="50dp" />

        <ProgressBar
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:id="@+id/progress_bar"
            style="@style/progress_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>