<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/point_white_1"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/point_gray_1"
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/item_main_bg"
            android:orientation="vertical"
            android:layout_weight="4.1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_weight="2.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageButton
                    android:padding="3dp"
                    android:id="@+id/ibt_btv"
                    android:cropToPadding="true"
                    android:background="@drawable/item_btv_bg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btv_icon_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <ImageView
                android:background="@color/colorGray1"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/ibt_user_guide"
                        android:padding="25dp"
                        android:background="@drawable/item_btv_bg"
                        android:scaleType="centerInside"
                        android:src="@drawable/user_guide_icon_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>


                <ImageView
                    android:background="@color/colorGray1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />


                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/ibt_setting"
                        android:padding="25dp"
                        android:background="@drawable/item_setting_bg"
                        android:scaleType="centerInside"
                        android:src="@drawable/setting_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <ImageView
                    android:background="@color/colorGray1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:padding="25dp"
                        android:id="@+id/ibt_apps"
                        android:background="@drawable/item_btv_bg"
                        android:scaleType="centerInside"
                        android:src="@drawable/apps_icon_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>


            </LinearLayout>

            <ImageView
                android:background="@color/colorGray1"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/ibt_market"
                        android:padding="25dp"
                        android:background="@drawable/item_market_bg"
                        android:scaleType="centerInside"
                        android:src="@drawable/market_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>


                <ImageView
                    android:background="@color/colorGray1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >
                    <ImageButton
                        android:id="@+id/ibt_anti_virus"
                        android:padding="25dp"
                        android:background="@drawable/item_btv_bg"
                        android:scaleType="centerInside"
                        android:src="@drawable/ld_opportunity_12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <ImageView
                    android:background="@color/colorGray1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/ibt_privacy"
                        android:padding="25dp"
                        android:background="@drawable/item_message_bg"
                        android:scaleType="centerInside"
                        android:src="@drawable/message_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_message_count"
                        android:layout_gravity="right"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/colorRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="2.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <com.jude.rollviewpager.RollPagerView
                android:layout_gravity="center"
                app:rollviewpager_play_delay="6000"
                android:id="@+id/rpv_main"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/follow"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:layout_width="match_parent"/>


            <FrameLayout
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageButton
                    android:padding="3dp"
                    android:id="@+id/ibt_ld_store"
                    android:cropToPadding="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/item_ldstore_bg"
                    android:src="@drawable/ld_store_icon"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageButton
                    android:id="@+id/ibt_ad_1"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/item_ad1_bg"
                    android:src="@drawable/bksound_icon_3"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="4.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fl_video"
                android:padding="3dp"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/item_black_bg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <VideoView
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_gravity="center"
                    android:id="@+id/vv_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_gravity="right"
                    android:src="@drawable/shuiyin"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

            </FrameLayout>
