            <FrameLayout
                android:background="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageButton
                    android:id="@+id/ibt_ld_cloud"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/item_ldcloud_bg"
                    android:src="@drawable/ld_cloud_icon_3"
                    android:scaleType="fitCenter"
                    android:cropToPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="right"
                    android:src="@drawable/cloud_shuiyin"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <ImageButton
                    android:id="@+id/ibt_full_screen"
                    android:background="@drawable/full_screen"
                    android:layout_margin="5dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="bottom|right"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>