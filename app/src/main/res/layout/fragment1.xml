<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5.7"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.wiatec.btv_launcher.custom_view.TranslationImageView
                        android:id="@+id/tiv_banner"
                        android:focusable="false"
                        android:layout_margin="3dp"
                        android:focusableInTouchMode="false"
                        android:layout_marginBottom="3dp"
                        android:background="@color/colorItemGreen2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />

                    <FrameLayout
                        android:id="@+id/fl_video"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/item_black_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="3dp">

                        <VideoView
                            android:id="@+id/vv_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:scaleType="centerInside"
                            android:src="@drawable/btv_icon_1" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:id="@+id/ibt_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item"
                            android:cropToPadding="true"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_settings11" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:id="@+id/ibt_user_guide"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item"
                            android:cropToPadding="true"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons_manuals11" />

                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <ImageButton
                        android:id="@+id/ibt_user_game"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:background="@drawable/bg_item"
                        android:cropToPadding="true"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/button_games" />

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <ImageButton
                        android:id="@+id/ibt_eufonico"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:background="@drawable/bg_item"
                        android:cropToPadding="true"
                        android:padding="3dp"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2.7"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:clipChildren="false"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ibt_market"
                            android:adjustViewBounds="true"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item"
                            android:cropToPadding="true"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons_app_mkt" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:id="@+id/ibt_apps"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item"
                            android:cropToPadding="true"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_apps11" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:id="@+id/ibt_ldsupport"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item"
                            android:cropToPadding="true"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_cc" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:id="@+id/ibt_institute"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item"
                            android:cropToPadding="true"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons_institute" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:id="@+id/ibt_anti_virus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item"
                            android:cropToPadding="true"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_opportunity11" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageButton
                                android:adjustViewBounds="true"
                                android:id="@+id/ibt_message"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_item"
                                android:cropToPadding="true"
                                android:padding="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_message" />

                            <TextView
                                tools:text="3"
                                android:id="@+id/tv_message_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:gravity="right|top"
                                android:textColor="@color/colorRed"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                        </FrameLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <ImageButton
                            android:cropToPadding="true"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:id="@+id/ibt_8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/item_message_bg"
                            android:src="@drawable/add_shortcut" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:cropToPadding="true"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:id="@+id/ibt_9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/item_message_bg"
                            android:src="@drawable/add_shortcut" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:cropToPadding="true"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:id="@+id/ibt_10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/item_message_bg"
                            android:src="@drawable/add_shortcut" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:cropToPadding="true"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:id="@+id/ibt_11"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/item_message_bg"
                            android:src="@drawable/add_shortcut" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:cropToPadding="true"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:id="@+id/ibt_12"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/item_message_bg"
                            android:src="@drawable/add_shortcut" />
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <ImageButton
                            android:cropToPadding="true"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:id="@+id/ibt_13"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/item_message_bg"
                            android:src="@drawable/add_shortcut" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="3dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/ll_push_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bg_item"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="36dp">

                <TextView
                    android:text="LD   FAM"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorBlue5"
                    android:layout_width="match_parent"
                    android:layout_height="36dp" />

                <ProgressBar
                    android:visibility="gone"
                    android:layout_margin="3dp"
                    android:layout_gravity="right"
                    android:id="@+id/pb_push_message"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.wiatec.btv_launcher.custom_view.MessageListView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/lv_message"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:text="Powered by LD TECH"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlue5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>