<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_video"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/item_black_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="3dp">

            <VideoView
                android:id="@+id/vv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:text="@string/clicktoenter"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:scaleType="centerInside"
                android:src="@drawable/ic_btv_white" />

            <ImageView
                android:id="@+id/iv_btv_logo"
                android:src="@drawable/btv_icon_1"
                android:background="@color/colorGray1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:id="@+id/ibt_setting"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_settings"
                        android:cropToPadding="true"
                        android:padding="3dp"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:id="@+id/ibt_apps"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_apps"
                        android:cropToPadding="true"
                        android:padding="3dp"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:id="@+id/ibt_game"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_game"
                        android:cropToPadding="true"
                        android:padding="3dp"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ibt_eufonico"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio"
                        android:cropToPadding="true"
                        android:padding="3dp"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

                <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:adjustViewBounds="true"
                    android:id="@+id/ibt_user_manual"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_manual"
                    android:cropToPadding="true"
                    android:padding="3dp"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/ibt_market"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_market"
                    android:cropToPadding="true"
                    android:padding="3dp"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:adjustViewBounds="true"
                    android:id="@+id/ibt_opportunity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_opportunity"
                    android:cropToPadding="true"
                    android:padding="3dp"
                    android:scaleType="centerCrop"/>

                <ImageButton
                    android:adjustViewBounds="true"
                    android:id="@+id/ibt_eufonic_bvision"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radio_watch"
                    android:cropToPadding="true"
                    android:padding="3dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            </LinearLayout>

            <com.wiatec.btv_launcher.custom_view.MultiImage
                android:id="@+id/tiv_eufonic"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

        <ImageButton
            android:layout_margin="3dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:id="@+id/ibt_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_message_bg"
            android:src="@drawable/add_shortcut" />

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <com.wiatec.btv_launcher.custom_view.MultiImage
        android:id="@+id/tiv_banner"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

</android.support.constraint.ConstraintLayout>