<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/point_gray_1"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/point_white_1"
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:padding="15dp"
                android:id="@+id/ibt_tv"
                android:src="@drawable/tv_icon"
                android:scaleType="centerInside"
                android:background="@drawable/item_btv_bg"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <ImageView
                android:background="@color/colorGray1"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <Button
                android:padding="3dp"
                android:id="@+id/bt_b1"
                android:background="@drawable/item_btv_bg"
                android:text="B-Vision Live1"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <ImageView
                android:background="@color/colorGray1"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <Button
                android:padding="3dp"
                android:id="@+id/bt_b2"
                android:background="@drawable/item_btv_bg"
                android:text="B-Vision Live2"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <ImageView
                android:background="@color/colorGray1"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <Button
                android:padding="3dp"
                android:id="@+id/bt_b3"
                android:background="@drawable/item_btv_bg"
                android:text="BTV Live"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <ImageView
                android:background="@color/colorGray1"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/rpv_apocalypse"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/apocalypse_icon"
                app:rollviewpager_play_delay="60000"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="0dp" />

            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorBTV"
                android:background="@color/colorGray1"
                android:text="@string/apocalypse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorBlack"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <SurfaceView
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_bvision"
                android:background="@drawable/btv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ibt_browser"
                android:src="@drawable/browser_icon"
                android:cropToPadding="true"
                android:padding="45dp"
                android:scaleType="centerInside"
                android:background="@drawable/item_btv_bg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <ImageButton
                android:id="@+id/ibt_security"
                android:layout_marginTop="15dp"
                android:src="@drawable/security_icon"
                android:cropToPadding="true"
                android:padding="45dp"
                android:scaleType="centerInside"
                android:background="@drawable/item_btv_bg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <ImageButton
                android:id="@+id/ibt_file"
                android:layout_marginTop="15dp"
                android:src="@drawable/file_icon"
                android:cropToPadding="true"
                android:padding="45dp"
                android:scaleType="centerInside"
                android:background="@drawable/item_btv_bg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>